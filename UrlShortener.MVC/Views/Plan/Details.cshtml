@model UrlShortener.BusinessLogic.DTOs.PlanDto

@{
    ViewData["Title"] = "Plan details";
}

<div class="min-h-screen bg-gradient-to-b from-slate-50 to-white">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-10">
        <div class="flex flex-col gap-6">

            <div class="flex flex-col gap-4 sm:flex-row sm:items-start sm:justify-between">
                <div class="min-w-0">
                    <div class="flex items-center gap-3">
                        <a asp-controller="Plan" asp-action="Index"
                           class="inline-flex items-center gap-2 rounded-2xl bg-white px-3 py-2 text-sm font-semibold text-slate-700 ring-1 ring-inset ring-slate-200 hover:bg-slate-50">
                            <span class="text-base leading-none">←</span>
                            Back
                        </a>

                        <span class="text-sm text-slate-400">/</span>
                        <span class="text-sm font-semibold text-slate-600">Details</span>
                    </div>

                    <div class="mt-5 flex items-center gap-4">
                        <div class="h-12 w-12 rounded-2xl bg-gradient-to-br from-slate-900 to-slate-700 text-white flex items-center justify-center shadow-sm">
                            <span class="text-lg font-semibold">
                                @((Model.Name?.Length ?? 0) > 0 ? Model.Name.Substring(0, 1).ToUpperInvariant() : "P")
                            </span>
                        </div>

                        <div class="min-w-0">
                            <h1 class="truncate text-3xl font-semibold tracking-tight text-slate-900">@Model.Name</h1>
                            <p class="mt-1 text-sm text-slate-500">
                                Plan ID:
                                <span class="font-mono text-slate-700">@Model.Id</span>
                            </p>
                        </div>
                    </div>
                </div>

                <div class="flex items-center gap-2">
                    <a asp-controller="Plan" asp-action="Edit" asp-route-id="@Model.Id"
                       class="inline-flex items-center justify-center rounded-2xl bg-slate-900 px-4 py-2.5 text-sm font-semibold text-white shadow-sm shadow-slate-900/10 hover:bg-slate-800 focus:outline-none focus:ring-2 focus:ring-slate-900 focus:ring-offset-2">
                        Edit
                    </a>

                    <a asp-controller="Plan" asp-action="Delete" asp-route-id="@Model.Id"
                       class="inline-flex items-center justify-center rounded-2xl bg-white px-4 py-2.5 text-sm font-semibold text-rose-700 ring-1 ring-inset ring-rose-200 hover:bg-rose-50 focus:outline-none focus:ring-2 focus:ring-rose-400 focus:ring-offset-2">
                        Delete
                    </a>
                </div>
            </div>

            <div class="rounded-3xl border border-slate-200 bg-white shadow-sm">
                <div class="flex flex-col gap-3 border-b border-slate-200 px-6 py-5 sm:flex-row sm:items-center sm:justify-between">
                    <div>
                        <h2 class="text-base font-semibold text-slate-900">Plan overview</h2>
                        <p class="mt-1 text-sm text-slate-500">Pricing, limits and enabled features.</p>
                    </div>

                    <div class="flex items-center gap-2">
                        <div class="inline-flex items-center gap-2 rounded-2xl bg-slate-50 px-3 py-2 ring-1 ring-inset ring-slate-200">
                            <span class="text-xs font-semibold uppercase tracking-wider text-slate-500">Monthly</span>
                            <span class="text-sm font-semibold text-slate-900">@Model.PriceMonthly.ToString("0.##")</span>
                        </div>

                        <div class="inline-flex items-center gap-2 rounded-2xl bg-slate-50 px-3 py-2 ring-1 ring-inset ring-slate-200">
                            <span class="text-xs font-semibold uppercase tracking-wider text-slate-500">Limit</span>
                            <span class="text-sm font-semibold text-slate-900">@Model.MaxLinksPerMonth</span>
                            <span class="text-xs text-slate-500">links</span>
                        </div>
                    </div>
                </div>

                <div class="px-6 py-6">
                    <div class="grid gap-6 lg:grid-cols-3">
                        <div class="lg:col-span-2">
                            <div class="grid gap-4 sm:grid-cols-2">
                                <div class="rounded-3xl bg-slate-50 p-5 ring-1 ring-inset ring-slate-200">
                                    <div class="text-xs font-semibold uppercase tracking-wider text-slate-500">Price</div>
                                    <div class="mt-2 flex items-end gap-2">
                                        <div class="text-3xl font-semibold text-slate-900">@Model.PriceMonthly.ToString("0.##")</div>
                                        <div class="pb-1 text-sm text-slate-500">/ month</div>
                                    </div>
                                    <div class="mt-3 text-sm text-slate-600">
                                        Great for comparing tiers quickly.
                                    </div>
                                </div>

                                <div class="rounded-3xl bg-slate-50 p-5 ring-1 ring-inset ring-slate-200">
                                    <div class="text-xs font-semibold uppercase tracking-wider text-slate-500">Usage limit</div>
                                    <div class="mt-2 flex items-end gap-2">
                                        <div class="text-3xl font-semibold text-slate-900">@Model.MaxLinksPerMonth</div>
                                        <div class="pb-1 text-sm text-slate-500">links / month</div>
                                    </div>
                                    <div class="mt-3 text-sm text-slate-600">
                                        Controls monthly link creation.
                                    </div>
                                </div>
                            </div>

                            <div class="mt-6">
                                <h3 class="text-sm font-semibold text-slate-900">Features</h3>
                                <div class="mt-3 grid gap-3 sm:grid-cols-2">
                                    <div class="flex items-center justify-between rounded-3xl border border-slate-200 p-4">
                                        <div>
                                            <div class="text-sm font-semibold text-slate-900">Custom alias</div>
                                            <div class="mt-0.5 text-xs text-slate-500">Users can choose their own short code</div>
                                        </div>
                                        <span class="inline-flex items-center rounded-full px-2.5 py-1 text-xs font-semibold ring-1 ring-inset
                                            @(Model.CustomAliasEnabled ? "bg-emerald-50 text-emerald-700 ring-emerald-200" : "bg-slate-50 text-slate-600 ring-slate-200")">
                                            @(Model.CustomAliasEnabled ? "Enabled" : "Disabled")
                                        </span>
                                    </div>

                                    <div class="flex items-center justify-between rounded-3xl border border-slate-200 p-4">
                                        <div>
                                            <div class="text-sm font-semibold text-slate-900">QR codes</div>
                                            <div class="mt-0.5 text-xs text-slate-500">Generate QR codes for quick sharing</div>
                                        </div>
                                        <span class="inline-flex items-center rounded-full px-2.5 py-1 text-xs font-semibold ring-1 ring-inset
                                            @(Model.QrEnabled ? "bg-emerald-50 text-emerald-700 ring-emerald-200" : "bg-slate-50 text-slate-600 ring-slate-200")">
                                            @(Model.QrEnabled ? "Enabled" : "Disabled")
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="rounded-3xl bg-slate-50 p-5 ring-1 ring-inset ring-slate-200">
                            <h3 class="text-sm font-semibold text-slate-900">Quick actions</h3>
                            <p class="mt-1 text-sm text-slate-600">Do you want to change something?</p>

                            <div class="mt-5 space-y-2">
                                <a asp-controller="Plan" asp-action="Edit" asp-route-id="@Model.Id"
                                   class="inline-flex w-full items-center justify-center rounded-2xl bg-slate-900 px-4 py-2.5 text-sm font-semibold text-white shadow-sm shadow-slate-900/10 hover:bg-slate-800">
                                    Edit plan
                                </a>

                                <a asp-controller="Plan" asp-action="Delete" asp-route-id="@Model.Id"
                                   class="inline-flex w-full items-center justify-center rounded-2xl bg-white px-4 py-2.5 text-sm font-semibold text-rose-700 ring-1 ring-inset ring-rose-200 hover:bg-rose-50">
                                    Delete plan
                                </a>

                                <a asp-controller="Plan" asp-action="Index"
                                   class="inline-flex w-full items-center justify-center rounded-2xl bg-white px-4 py-2.5 text-sm font-semibold text-slate-900 ring-1 ring-inset ring-slate-200 hover:bg-slate-50">
                                    Back to list
                                </a>
                            </div>

                            <div class="mt-6 rounded-3xl bg-white p-4 ring-1 ring-inset ring-slate-200">
                                <div class="text-xs font-semibold uppercase tracking-wider text-slate-500">Summary</div>
                                <div class="mt-2 text-sm text-slate-700">
                                    <span class="font-semibold text-slate-900">@Model.Name</span>
                                    <span class="text-slate-400">•</span>
                                    @Model.PriceMonthly.ToString("0.##")/mo
                                    <span class="text-slate-400">•</span>
                                    @Model.MaxLinksPerMonth links
                                </div>
                                <div class="mt-2 flex flex-wrap gap-2">
                                    <span class="inline-flex items-center rounded-full px-2.5 py-1 text-xs font-semibold ring-1 ring-inset
                                        @(Model.CustomAliasEnabled ? "bg-emerald-50 text-emerald-700 ring-emerald-200" : "bg-slate-50 text-slate-600 ring-slate-200")">
                                        @(Model.CustomAliasEnabled ? "Custom alias" : "No alias")
                                    </span>
                                    <span class="inline-flex items-center rounded-full px-2.5 py-1 text-xs font-semibold ring-1 ring-inset
                                        @(Model.QrEnabled ? "bg-emerald-50 text-emerald-700 ring-emerald-200" : "bg-slate-50 text-slate-600 ring-slate-200")">
                                        @(Model.QrEnabled ? "QR enabled" : "No QR")
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
