@model dynamic

<div class="grid gap-6">
    <div class="grid gap-4 sm:grid-cols-2">
        <div class="sm:col-span-2">
            <label class="block text-sm font-semibold text-slate-900">Name</label>
            <p class="mt-1 text-sm text-slate-500">Displayed to users on your pricing page.</p>

            <input name="Name" value="@(Model?.Name ?? "")"
                   class="mt-3 w-full rounded-2xl border border-slate-200 bg-white px-4 py-3 text-sm text-slate-900 shadow-sm outline-none ring-0 placeholder:text-slate-400 focus:ring-2 focus:ring-slate-900"
                   placeholder="Starter, Pro, Business..." />

            <div class="mt-2 text-sm text-rose-600">@Html.ValidationMessage("Name")</div>
        </div>

        <div>
            <label class="block text-sm font-semibold text-slate-900">Price monthly</label>
            <p class="mt-1 text-sm text-slate-500">Use 0 for free plans.</p>

            <div class="relative mt-3">
                <span class="pointer-events-none absolute left-4 top-1/2 -translate-y-1/2 text-sm text-slate-400">$</span>
                <input name="PriceMonthly" value="@(Model?.PriceMonthly ?? 0)"
                       class="w-full rounded-2xl border border-slate-200 bg-white pl-9 pr-4 py-3 text-sm text-slate-900 shadow-sm outline-none placeholder:text-slate-400 focus:ring-2 focus:ring-slate-900"
                       placeholder="0, 9.99, 19.99" />
            </div>

            <div class="mt-2 text-sm text-rose-600">@Html.ValidationMessage("PriceMonthly")</div>
        </div>

        <div>
            <label class="block text-sm font-semibold text-slate-900">Max links / month</label>
            <p class="mt-1 text-sm text-slate-500">Controls how many links a user can create.</p>

            <input name="MaxLinksPerMonth" value="@(Model?.MaxLinksPerMonth ?? 0)"
                   class="mt-3 w-full rounded-2xl border border-slate-200 bg-white px-4 py-3 text-sm text-slate-900 shadow-sm outline-none placeholder:text-slate-400 focus:ring-2 focus:ring-slate-900"
                   placeholder="1000" />

            <div class="mt-2 text-sm text-rose-600">@Html.ValidationMessage("MaxLinksPerMonth")</div>
        </div>
    </div>

    <div class="grid gap-3 sm:grid-cols-2">
        <div class="rounded-3xl border border-slate-200 bg-slate-50 p-5">
            <div class="flex items-start justify-between gap-4">
                <div>
                    <p class="text-sm font-semibold text-slate-900">Custom alias</p>
                    <p class="mt-1 text-sm text-slate-600">Allow users to define their own short code.</p>
                </div>

                <label class="relative inline-flex cursor-pointer items-center">
                    <input type="checkbox" name="CustomAliasEnabled" value="true" class="peer sr-only"
                           @(Model?.CustomAliasEnabled == true ? "checked" : "") />
                    <div class="h-7 w-12 rounded-full bg-slate-200 ring-1 ring-inset ring-slate-300 transition peer-checked:bg-slate-900 peer-focus:outline-none peer-focus:ring-2 peer-focus:ring-slate-900"></div>
                    <div class="absolute left-1 top-1 h-5 w-5 rounded-full bg-white shadow-sm transition peer-checked:translate-x-5"></div>
                </label>
                <input type="hidden" name="CustomAliasEnabled" value="false" />
            </div>
        </div>

        <div class="rounded-3xl border border-slate-200 bg-slate-50 p-5">
            <div class="flex items-start justify-between gap-4">
                <div>
                    <p class="text-sm font-semibold text-slate-900">QR codes</p>
                    <p class="mt-1 text-sm text-slate-600">Enable QR generation for links.</p>
                </div>

                <label class="relative inline-flex cursor-pointer items-center">
                    <input type="checkbox" name="QrEnabled" value="true" class="peer sr-only"
                           @(Model?.QrEnabled == true ? "checked" : "") />
                    <div class="h-7 w-12 rounded-full bg-slate-200 ring-1 ring-inset ring-slate-300 transition peer-checked:bg-slate-900 peer-focus:outline-none peer-focus:ring-2 peer-focus:ring-slate-900"></div>
                    <div class="absolute left-1 top-1 h-5 w-5 rounded-full bg-white shadow-sm transition peer-checked:translate-x-5"></div>
                </label>
                <input type="hidden" name="QrEnabled" value="false" />
            </div>
        </div>
    </div>

    <div>
        <div class="rounded-2xl border border-rose-200 bg-rose-50 px-4 py-3 text-sm text-rose-800">
            @Html.ValidationSummary(false)
        </div>
    </div>
</div>
