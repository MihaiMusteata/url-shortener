@model dynamic

<div class="grid gap-6">
    <div class="grid gap-4 sm:grid-cols-2">
        <div>
            <label class="block text-sm font-semibold text-slate-900">UserId</label>
            <p class="mt-1 text-sm text-slate-500">Paste the user's GUID.</p>

            <input name="UserId" value="@(Model?.UserId ?? Guid.Empty)"
                   class="mt-3 w-full rounded-2xl border border-slate-200 bg-white px-4 py-3 text-sm text-slate-900 shadow-sm outline-none placeholder:text-slate-400 focus:ring-2 focus:ring-slate-900"
                   placeholder="00000000-0000-0000-0000-000000000000" />

            <div class="mt-2 text-sm text-rose-600">@Html.ValidationMessage("UserId")</div>
        </div>

        <div>
            <label class="block text-sm font-semibold text-slate-900">PlanId</label>
            <p class="mt-1 text-sm text-slate-500">Paste the plan's GUID.</p>

            <input name="PlanId" value="@(Model?.PlanId ?? Guid.Empty)"
                   class="mt-3 w-full rounded-2xl border border-slate-200 bg-white px-4 py-3 text-sm text-slate-900 shadow-sm outline-none placeholder:text-slate-400 focus:ring-2 focus:ring-slate-900"
                   placeholder="00000000-0000-0000-0000-000000000000" />

            <div class="mt-2 text-sm text-rose-600">@Html.ValidationMessage("PlanId")</div>
        </div>
    </div>

    <div class="rounded-3xl border border-slate-200 bg-slate-50 p-5">
        <div class="flex items-start justify-between gap-4">
            <div>
                <p class="text-sm font-semibold text-slate-900">Active</p>
                <p class="mt-1 text-sm text-slate-600">Controls whether this subscription is active.</p>
            </div>

            <label class="relative inline-flex cursor-pointer items-center">
                <input type="checkbox" name="Active" value="true" class="peer sr-only"
                       @(Model?.Active == true ? "checked" : "") />
                <div class="h-7 w-12 rounded-full bg-slate-200 ring-1 ring-inset ring-slate-300 transition peer-checked:bg-slate-900 peer-focus:outline-none peer-focus:ring-2 peer-focus:ring-slate-900"></div>
                <div class="absolute left-1 top-1 h-5 w-5 rounded-full bg-white shadow-sm transition peer-checked:translate-x-5"></div>
            </label>
            <input type="hidden" name="Active" value="false" />
        </div>
    </div>

    <div>
        <div class="rounded-2xl border border-rose-200 bg-rose-50 px-4 py-3 text-sm text-rose-800">
            @Html.ValidationSummary(false)
        </div>
    </div>
</div>
