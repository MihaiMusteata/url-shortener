@model List<UrlShortener.BusinessLogic.DTOs.SubscriptionDto>

@{
    ViewData["Title"] = "Subscriptions";
}

<div class="min-h-screen bg-gradient-to-b from-slate-50 to-white">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-10">
        <div class="flex flex-col gap-6">
            <div class="flex flex-col gap-4 sm:flex-row sm:items-center sm:justify-between">
                <div>
                    <h1 class="text-3xl font-semibold tracking-tight text-slate-900">Subscriptions</h1>
                    <p class="mt-1 text-sm text-slate-500">Manage user subscriptions and plan assignments.</p>
                </div>

                <div class="flex items-center gap-3">
                    <a asp-controller="Subscription" asp-action="Create"
                       class="inline-flex items-center gap-2 rounded-2xl bg-slate-900 px-4 py-2.5 text-sm font-semibold text-white shadow-sm shadow-slate-900/10 hover:bg-slate-800 focus:outline-none focus:ring-2 focus:ring-slate-900 focus:ring-offset-2">
                        <span class="text-base leading-none">+</span>
                        <span>New subscription</span>
                    </a>
                </div>
            </div>

            @if (TempData["Success"] is not null)
            {
                <div class="rounded-2xl border border-emerald-200 bg-emerald-50 px-4 py-3 text-sm text-emerald-800">
                    <div class="flex items-start justify-between gap-3">
                        <div class="font-medium">Success</div>
                        <div class="text-emerald-800/90">@TempData["Success"]</div>
                    </div>
                </div>
            }

            @if (TempData["Error"] is not null)
            {
                <div class="rounded-2xl border border-rose-200 bg-rose-50 px-4 py-3 text-sm text-rose-800">
                    <div class="flex items-start justify-between gap-3">
                        <div class="font-medium">Error</div>
                        <div class="text-rose-800/90">@TempData["Error"]</div>
                    </div>
                </div>
            }

            <div class="rounded-3xl border border-slate-200 bg-white shadow-sm">
                <div class="flex flex-col gap-3 border-b border-slate-200 px-6 py-5 sm:flex-row sm:items-center sm:justify-between">
                    <div>
                        <h2 class="text-base font-semibold text-slate-900">All subscriptions</h2>
                        <p class="mt-1 text-sm text-slate-500">Search by user or plan.</p>
                    </div>

                    <div class="flex items-center gap-2">
                        <div class="relative">
                            <input id="subSearch" type="text" placeholder="Search user / plan..."
                                   class="w-full sm:w-80 rounded-2xl border border-slate-200 bg-slate-50 px-4 py-2.5 text-sm text-slate-900 placeholder:text-slate-400 shadow-inner outline-none focus:bg-white focus:ring-2 focus:ring-slate-900" />
                            <div class="pointer-events-none absolute right-3 top-1/2 -translate-y-1/2 text-slate-400">
                                ⌕
                            </div>
                        </div>

                        <button type="button" id="clearSearch"
                                class="hidden rounded-2xl bg-white px-3 py-2 text-sm font-semibold text-slate-700 ring-1 ring-inset ring-slate-200 hover:bg-slate-50">
                            Clear
                        </button>
                    </div>
                </div>

                <div class="overflow-x-auto">
                    <table class="min-w-full text-left">
                        <thead class="bg-slate-50">
                            <tr class="text-xs font-semibold uppercase tracking-wider text-slate-500">
                                <th class="px-6 py-4">User</th>
                                <th class="px-6 py-4">Plan</th>
                                <th class="px-6 py-4">Status</th>
                                <th class="px-6 py-4 text-right">Actions</th>
                            </tr>
                        </thead>

                        <tbody class="divide-y divide-slate-100 bg-white">
                            @if (Model is null || Model.Count == 0)
                            {
                                <tr>
                                    <td colspan="4" class="px-6 py-14">
                                        <div class="flex flex-col items-center justify-center text-center">
                                            <div class="h-14 w-14 rounded-2xl bg-slate-100 flex items-center justify-center text-slate-700 font-semibold">
                                                S
                                            </div>
                                            <h3 class="mt-4 text-base font-semibold text-slate-900">No subscriptions found</h3>
                                            <p class="mt-1 text-sm text-slate-500 max-w-md">
                                                Create a subscription to connect a user with a plan.
                                            </p>
                                            <a asp-controller="Subscription" asp-action="Create"
                                               class="mt-5 inline-flex items-center gap-2 rounded-2xl bg-slate-900 px-4 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-slate-800">
                                                + New subscription
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                            else
                            {
                                foreach (var s in Model)
                                {
                                    var fullName = (s.User is null)
                                        ? "Unknown user"
                                        : $"{s.User.FirstName} {s.User.LastName}".Trim();

                                    var identityLine = (s.User is null)
                                        ? ""
                                        : $"@{s.User.Username} · {s.User.Email}";

                                    var planName = string.IsNullOrWhiteSpace(s.PlanName) ? "Unknown plan" : s.PlanName;

                                    var searchText = $"{fullName} {identityLine} {planName}".ToLowerInvariant();

                                    <tr class="sub-row hover:bg-slate-50/70 transition-colors"
                                        data-search="@searchText">
                                        <td class="px-6 py-4">
                                            <div class="flex items-center gap-3">
                                                <div class="h-10 w-10 rounded-2xl bg-gradient-to-br from-slate-900 to-slate-700 text-white flex items-center justify-center shadow-sm">
                                                    <span class="text-sm font-semibold">
                                                        @((fullName?.Length ?? 0) > 0 ? fullName.Substring(0, 1).ToUpperInvariant() : "U")
                                                    </span>
                                                </div>
                                                <div class="min-w-0">
                                                    <div class="truncate text-sm font-semibold text-slate-900">@fullName</div>
                                                    <div class="mt-0.5 text-xs text-slate-500 truncate">@identityLine</div>
                                                    <div class="mt-0.5 text-xs text-slate-400 font-mono truncate">@s.Id</div>
                                                </div>
                                            </div>
                                        </td>

                                        <td class="px-6 py-4">
                                            <div class="text-sm font-semibold text-slate-900">@planName</div>
                                            <div class="mt-0.5 text-xs text-slate-500">PlanId: <span class="font-mono">@s.PlanId</span></div>
                                        </td>

                                        <td class="px-6 py-4">
                                            <span class="inline-flex items-center rounded-full px-2.5 py-1 text-xs font-semibold ring-1 ring-inset
                                                @(s.Active ? "bg-emerald-50 text-emerald-700 ring-emerald-200" : "bg-slate-50 text-slate-600 ring-slate-200")">
                                                @(s.Active ? "Active" : "Inactive")
                                            </span>
                                        </td>

                                        <td class="px-6 py-4">
                                            <div class="flex items-center justify-end gap-2">
                                                <a asp-controller="Subscription" asp-action="Details" asp-route-id="@s.Id"
                                                   class="rounded-2xl bg-white px-3 py-2 text-sm font-semibold text-slate-900 ring-1 ring-inset ring-slate-200 hover:bg-slate-50">
                                                    Details
                                                </a>

                                                <a asp-controller="Subscription" asp-action="Edit" asp-route-id="@s.Id"
                                                   class="rounded-2xl bg-slate-900 px-3 py-2 text-sm font-semibold text-white shadow-sm shadow-slate-900/10 hover:bg-slate-800">
                                                    Edit
                                                </a>

                                                <a asp-controller="Subscription" asp-action="Delete" asp-route-id="@s.Id"
                                                   class="rounded-2xl bg-white px-3 py-2 text-sm font-semibold text-rose-700 ring-1 ring-inset ring-rose-200 hover:bg-rose-50">
                                                    Delete
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>

                @if (Model is not null && Model.Count > 0)
                {
                    <div class="flex items-center justify-between border-t border-slate-200 px-6 py-4">
                        <div class="text-sm text-slate-500">
                            Showing <span id="shownCount" class="font-semibold text-slate-700">@Model.Count</span>
                            of <span class="font-semibold text-slate-700">@Model.Count</span> subscriptions
                        </div>
                        <div class="text-xs text-slate-400">Tip: search by name, username, email, plan</div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
(function () {
    const input = document.getElementById('subSearch');
    const clearBtn = document.getElementById('clearSearch');
    const rows = Array.from(document.querySelectorAll('.sub-row'));
    const shownCount = document.getElementById('shownCount');

    if (!input || rows.length === 0) return;

    function apply() {
        const q = (input.value || '').trim().toLowerCase();
        let shown = 0;

        rows.forEach(r => {
            const hay = r.getAttribute('data-search') || '';
            const ok = q.length === 0 || hay.includes(q);
            r.classList.toggle('hidden', !ok);
            if (ok) shown++;
        });

        if (shownCount) shownCount.textContent = String(shown);
        clearBtn.classList.toggle('hidden', q.length === 0);
    }

    input.addEventListener('input', apply);
    clearBtn.addEventListener('click', function () {
        input.value = '';
        apply();
        input.focus();
    });

    apply();
})();
</script>
}
